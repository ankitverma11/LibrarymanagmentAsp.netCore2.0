@model LibraryManagment.Data.Model.Author

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <p>@Model.Name</p>
            </div>
        <div class="panel-body">
            <h2> Book Count : @Model.Books?.Count</h2>
            <div class="btn-group">
                @if (Model.Books?.Count == 0)
                {
                    <a class="btm btn-default">View book list</a>
                }
                else
                {
                    <a class="btm btn-info" asp-controller="Book" asp-action="List" asp-route-id="@Model.AuthorId">View book list</a>
                }
                <a class="btn btn-info" asp-controller="Author" asp-action="Update" asp-route-id="@Model.AuthorId">Edit</a> 
                 <a class="btn btn-danger" asp-controller="Author" asp-action="Delete" asp-route-id="@Model.AuthorId">Delete</a> 
            </div>
        </div>
        </div>
    </div>

