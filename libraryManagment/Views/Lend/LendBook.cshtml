@model LibraryManagment.ViewModel.LendViewModel


<div class="row orderfrom">
    <div class="col-md-4">
        <form asp-action="LendBook" asp-controller="Lend" method="post" role="form" class="form-horizontal">
            <h3 class="col-md-offset-2">Lend A Book</h3>
            @Html.HiddenFor(m => m.Book.BookId)
            <div class="form-group">
                <label asp-for="Book.Borrowner" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.Book.BorrownerId,
                      new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = x.Name }), "Value", "Text"), "Select Customer",
                      htmlAttributes: new { @class = "form-control bordr-input" })
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input type="submit" value="Return" class="btn btn-default" asp-controller="Lend" asp-action="List" />
                    <input type="submit" value="Lend" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

