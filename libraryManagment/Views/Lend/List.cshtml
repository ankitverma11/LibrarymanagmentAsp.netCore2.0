@using LibraryManagment.Data.Model

@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th> ID </th>
            <th> Name </th>
            <th> Author name </th>
            <th> Lend a book </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td><a class="btn btn-success" asp-controller="Lend" asp-action="Lendbook" asp-route-id="@book.BookId">Lend</a> </td>
            </tr>
        }
    </tbody>
</table>
