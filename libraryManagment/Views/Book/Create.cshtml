@model LibraryManagment.ViewModel.BookViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row orderfrom">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Book" method="post" role="form" class="form-horizontal">
            <h3 class="col-md-offset-2">Create New Book</h3>
           <div class="form-group">
               <label asp-for="Book.Author" class="col-md-2 control-label"></label> 
               <div class="col-md-4">
                   @Html.DropDownListFor(m => m.Book.AuthorId,
                     new SelectList(Model.Authors.Select(x => new { Value = x.AuthorId, Text = x.Name }), "Value", "Text"),
                     htmlAttributes: new { @class = "form-control bordr-input" })
                   <span asp-validation-for="Book.Author" class="text-danger"></span>
               </div>

               <div class="col-md-2">
                   <a class="btn btn-success" style="width:100%" asp-controller="Author" asp-action="Create">Create an author</a> 
               </div>
           </div>  
            <div class="form-group">
                <label asp-for="Book.Title" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Book.Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input type="submit" value="Return" class="btn btn-default" asp-controller="Book" asp-action="List" />
                    <input type="submit" style="margin:5px;" value="Create" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

